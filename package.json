{
  "name": "minademian.com",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "sass": "sass src/assets/styles:public/assets/styles",
    "sass:watch-dev": "sass --watch --embed-source-map src/assets/styles:public/assets/styles",
    "sass:dev": "sass --embed-source-map src/assets/styles:public/assets/styles",
    "sass:prod": "sass --no-source-map --style compressed src/assets/styles:public/assets/styles",
    "clean": "recursive-delete 'public'",
    "img": "recursive-copy 'src/assets/images' 'public/assets/images'",
    "talk": "recursive-copy 'src/assets/talk' 'public/assets/talk'",
    "html": "recursive-copy 'src/html' 'public'",
    "prep": "make-dir public public/assets public/assets/styles public/assets/images public/assets/talk",
    "fresh-start": "npm-run-all -s clean prep",
    "build-dirty": "npm-run-all -p img talk html sass:dev",
    "build": "npm-run-all -s build-dirty",
    "fresh-start-and-build": "npm-run-all -s fresh-start build",
    "build-prod": "npm-run-all -p img talk html sass:prod",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-css": "chokidar './src/assets/styles/**/*.*' -c 'npm run sass:watch-dev'",
    "watch-js": "chokidar './src/**/*.js' -c 'npm run js'",
    "watch-svg": "chokidar './src/**/*.svg' -c 'npm run svg'",
    "watch-img": "chokidar './src/assets/img/**/*.*' -c 'npm run img'",
    "watch-html": "chokidar './src/html/**/*.*' -c 'npm run html'",
    "watch": "npm-run-all -p watch-css watch-html watch-img",
    "server-start": "browser-sync start --files 'public' --server 'public'",
    "server": "npm run fresh-start-and-build && npm-run-all -p watch server-start",
    "build:prod": "npm-run-all -s fresh-start build-prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^20.9.0",
    "browser-sync": "^2.29.3",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.3.1",
    "ftp-deploy": "^2.4.5",
    "make-dir-cli": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.1.0",
    "recursive-fs": "^2.1.0",
    "sass": "^1.69.5",
    "ts-node": "^10.9.1"
  }
}
